<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
    	
		<TextView
		    android:id="@+id/text_explore"
		    android:layout_centerHorizontal="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="@string/content_explore_rangeley"
		    android:fontFamily="sans-serif-light"
		    android:textColor="#ffffff"
		    android:textSize="40sp"
		    android:textStyle="italic"
		    android:paddingRight="12sp"
		    android:paddingLeft="12sp"
		    android:paddingBottom="12sp"
		    android:paddingTop="9sp"
		    android:shadowColor="#000000"
		    android:shadowDx="0"
		    android:shadowDy="0"
		    android:shadowRadius="1"/>
		
		
    	
		<LinearLayout
		    android:id="@+id/explore_buttons_layout"
		    android:layout_below="@id/text_explore"
			android:layout_width="wrap_content"
			android:layout_height="300sp"
			android:orientation="horizontal"
			android:weightSum="1.0"
			android:layout_centerHorizontal="true">
		    
		    <RelativeLayout
			    android:id="@+id/lake_button_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="onClickLakesButton"
				android:background="#33dddddd"
				android:layout_weight=".5"
				android:layout_marginTop="10sp"
				android:layout_marginBottom="10sp"
				android:layout_marginRight="5sp"
				android:layout_marginLeft="10sp">
		        
		        
		          <TextView
			        android:id="@+id/text_lakes"
			        android:text="By Lakes"
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="6sp"
				    android:onClick="onClickLakesButton"
				    android:paddingRight="6sp"
				    android:paddingLeft="6sp"
				    android:layout_centerHorizontal="true"
				    android:textSize="20sp"
				    android:textColor="#ffffff"
				    android:shadowColor="#000000"
				    android:shadowDx="0"
				    android:shadowDy="0"
				    android:shadowRadius="1"/>
		        
		        <ImageView
		            android:id="@+id/iv_lake_button" 
		            android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/text_lakes"
					android:src="@drawable/button_lake"
					android:layout_centerHorizontal="true"
					android:padding="10sp"/>
		        
			</RelativeLayout>
			    
			<RelativeLayout
			    android:id="@+id/layout_fish_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="onClickLakesButton"
				android:background="#33dddddd"
				android:layout_weight=".5"
				android:layout_marginTop="10sp"
				android:layout_marginBottom="10sp"
				android:layout_marginRight="10sp"
				android:layout_marginLeft="5sp">
		        
			    <TextView
			        android:id="@+id/text_fish"
			        android:text="By Fish"
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="6sp"
				    android:onClick="onClickLakesButton"
				    android:paddingRight="6sp"
				    android:paddingLeft="6sp"
				    android:layout_centerHorizontal="true"
				    android:textSize="20sp"
				    android:textColor="#ffffff"
				    android:shadowColor="#000000"
				    android:shadowDx="0"
				    android:shadowDy="0"
				    android:shadowRadius="1"/>
			    
		        <ImageView
		            android:id="@+id/iv_fish_button" 
		            android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/text_fish"
					android:src="@drawable/button_fish"
					android:layout_centerHorizontal="true"
					android:padding="10sp"/>
			
			</RelativeLayout>
		    
		</LinearLayout>
		
		<Button
		    android:id="@+id/laws_layout"
		    android:onClick="onClickLawsAndRegs"
		    android:layout_below="@+id/explore_buttons_layout"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginTop="10sp"
		    android:text="Laws and Regulations"
		    android:fontFamily="sans-serif-light"
		    android:background="#55dddddd"
		    android:textColor="#ffffff"
		    android:textSize="30sp"
		    android:textStyle="italic"
		    
		    android:layout_centerHorizontal="true"
		    android:paddingLeft="10sp"
	    android:paddingRight="10sp"/>
	
    <Button
        android:id="@+id/what_is"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:layout_below="@id/laws_layout"
		android:text="@string/content_what_is"
		android:fontFamily="sans-serif-light"
	    android:textSize="30sp"
	    android:background="#55dddddd"
	    android:textColor="#ffffff"
	    android:textStyle="italic"
	    android:paddingLeft="10sp"
	    android:paddingRight="10sp"
	    android:paddingBottom="5sp"
	    android:onClick="onClickAbout"
	    android:layout_centerHorizontal="true"/>
    	
    	
    	
</RelativeLayout>

</ScrollView>
